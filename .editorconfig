[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=tab
tab_width=8

[{*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=tab
tab_width=4

[{*.mod,*.dtd,*.ent,*.elt}]
indent_style=tab
tab_width=4

[{*.jhm,*.xslt,*.xul,*.rng,*.xsl,*.xsd,*.ant,*.qrc,*.tld,*.fxml,*.jrxml,*.xml,*.jnlp,*.wsdl}]
indent_style=tab
tab_width=4

[*.json]
indent_style=tab
tab_width=4

[*.java]
indent_style=tab
tab_width=4

[{org.codehaus.groovy.runtime.ExtensionModule,*.properties}]
indent_style=space
indent_size=4

[{*.gy,*.groovy,*.gant,*.gradle,*.gdsl}]
indent_style=tab
tab_width=4

[{*.kts,*.kt}]
indent_style=tab
tab_width=4

[{*.h,*.cc,*.ii,*.cpp,*.icc,*.mm,*.tcc,*.hxx,*.c++,*.hp,*.hh,*.cxx,*.inl,*.hpp,*.m,*.i,*.c,*.h++,*.pch,*.cp}]
indent_style=tab
tab_width=4

[{CMakeLists.txt,*.cmake}]
indent_style=space
indent_size=4

[{*.pyw,*.py}]
indent_style=space
indent_size=4

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

