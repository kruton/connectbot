<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="vm"
			type="org.connectbot.ui.entropy.EntropyViewModel"/>
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/entropy_hint"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="16dp"
			android:gravity="center_horizontal"
			android:text="@string/pubkey_touch_hint"
			android:textSize="16sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

		<TextView
			android:id="@+id/entropy_view"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_margin="16dp"
			android:layout_marginTop="8dp"
			android:background="@drawable/button_shape"
			android:gravity="center"
			android:padding="16dp"
			android:text="@{vm.entropyText}"
			app:layout_constraintBottom_toTopOf="@+id/progress"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/entropy_hint"
			app:onXYTouch="@{vm::onUserTouch}"
			tools:text="@string/pubkey_touch_prompt"/>

		<ProgressBar
			android:id="@+id/progress"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="16dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginStart="16dp"
			android:max="100"
			android:progress="@{vm.percentGathered}"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/entropy_view"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
